<%= render "shared/header"%>

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ログイン情報入力
    </h1>
  </div>
  
  <div class="form-group">
    <div class='sns-btn-wrap-login'>
    <div class='sns-btn'>
      <%= f.submit "facebookでログイン" ,class:"facebook-btn" %>
    </div>
    <div class='sns-btn'>
      <%= f.submit "twitterでログイン" ,class:"twitter-btn" %>
    </div>
    <div class='sns-btn'>
      <%= f.submit "Google+でログイン" ,class:"google-btn" %>
    </div>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"半角英数字" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-green-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/footer"%>